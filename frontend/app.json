{
  "expo": {
    "name": "Vida Leve",
    "slug": "vida-leve",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./src/assets/images/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "config": {
        "usesNonExemptEncryption": false
      },
      "bundleIdentifier": "vida-leve.app"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Roboto-Light.ttf",
            "./src/assets/fonts/Roboto-Regular.ttf",
            "./src/assets/fonts/Roboto-Medium.ttf",
            "./src/assets/fonts/Roboto-Bold.ttf",
            "./src/assets/fonts/Roboto-Black.ttf",
            "./src/assets/fonts/Ruda-Bold.ttf"
          ]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "O aplicativo precisa de acesso à galeria de fotos para que você possa selecionar uma foto de perfil."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que o aplicativo acesse a sua camera."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash.png",
          "backgroundColor": "#ffffff",
          "imageWidth": 500
        }
      ],
      "expo-secure-store"
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "vida_leve.app"
    },
    "web": {}
  }
}
